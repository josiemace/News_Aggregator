<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/black1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/idImageViewNews"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:scaleType="center"
            />

        <TextView
            android:id="@+id/idTextViewNewsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idImageViewNews"
            android:textColor="@color/red_orange"
            android:text="New Heading"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="3dp"
            android:maxLines="2"
            android:layout_margin="3dp"
            />

        <TextView
            android:id="@+id/idTextViewSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subheading"
            android:textColor="@color/red_orange"
            android:layout_below="@id/idTextViewNewsHeader"
            android:maxLines="3"
            android:layout_margin="3dp"
            android:padding="3dp"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>